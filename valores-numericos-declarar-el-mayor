  <title>Búsqueda en Array</title>
  <script>
    /*
    Array con valores numericos y declarar el mayor
    */
    var tab = [10, 20, 30, 40, 50];

function Mayor(tab) {
    var mayor = -Infinity; // Se cambió el valor inicial a -Infinity para manejar números negativos.
    for (var i = 0; i < tab.length; i++) {
        if (tab[i] > mayor) {
            mayor = tab[i];
        }
    }
    return mayor;
}

function Visualizar(resultado) {
    alert("El número más grande es: " + resultado);
}

var numero = parseInt(prompt("Ingresar número"));
var resultado = Mayor(tab);
Visualizar(resultado);

        </script>
</head>
<body>
  <h2>Buscar Número en Array</h2>
  
</body>
